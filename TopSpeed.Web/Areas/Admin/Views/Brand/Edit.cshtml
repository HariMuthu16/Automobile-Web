@model Brand

<div class="container">

    <div class="row mb-3">
        <div class="col-md-12">
            <h3 class="text-uppercase text-primary text-primary">
                Update Brand
            </h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 border border-1">

            <form method="post" enctype="multipart/form-data">

                <div class="mb-3">
                    <label asp-for="@Model.Name" class="form-label"></label>
                    <input asp-for="@Model.Name" class="form-control" />
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.EstablishedYear" class="form-label"></label>
                    <input asp-for="@Model.EstablishedYear" class="form-control" />
                    <span asp-validation-for="@Model.EstablishedYear" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="@Model.BrandLogo" class="form-label"></label>
                    <input type="file" name="files" id="uploadBox" class="form-control" />
                </div>
                <div>
                    <a asp-controller="Brand" asp-action="Index" class="btn btn-warning">Back</a>
                    <button type="submit" class="btn btn-success">Update</button>
                </div>
            </form>


        </div>

        <div class="col-md-4">
            @if(Model.BrandLogo != null)
            {
                <img src="@Model.BrandLogo" width="100%" />
            }
        
        </div>

    </div>

</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
   }
